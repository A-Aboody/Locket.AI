{
  "name": "locket.ai",
  "private": true,
  "version": "1.0.0",
  "description": "Locket.AI - AI-Powered Document Retrieval",
  "author": "Locket.AI, Inc.",
  "main": "electron/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "dev:electron": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.10.9",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "axios": "^1.12.2",
    "chakra": "^0.0.3",
    "docx-preview": "^0.3.0",
    "electron-is-dev": "^3.0.1",
    "framer-motion": "^10.18.0",
    "lodash-es": "^4.17.21",
    "mammoth": "^1.6.0",
    "next-themes": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-pdf": "^9.1.1",
    "react-router-dom": "^7.9.4",
    "react-window": "^2.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "vite": "^7.1.7",
    "vite-plugin-static-copy": "^3.1.4",
    "vite-tsconfig-paths": "^5.1.4",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.yourteam.documentretrieval",
    "productName": "Locket.AI",
    "icon": "public/icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!venv",
          "!__pycache__",
          "!*.pyc",
          "!.env",
          "!uploads"
        ]
      },
      {
        "from": "../docker-compose.yml",
        "to": "docker-compose.yml"
      },
      {
        "from": "../.env.docker",
        "to": ".env.docker"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "fileAssociations": [
        {
          "ext": "pdf",
          "name": "PDF Document",
          "description": "PDF Document",
          "role": "Viewer"
        }
      ],
      "protocols": [
        {
          "name": "Locket.AI Deep Link",
          "schemes": [
            "locket"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "protocols": [
        {
          "name": "Locket.AI Deep Link",
          "schemes": [
            "locket"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "protocols": [
        {
          "name": "Locket.AI Deep Link",
          "schemes": [
            "locket"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
