ENVIRONMENT=development
DATABASE_URL=postgresql://doc_user:YOUR_LOCAL_PASSWORD@localhost:5432/document_retrieval
DEV_SECRET_KEY=THIS_WILL_BE_PROVIDED_FOR_DEVELOPMENT
PROD_SECRET_KEY=GENERATE_UNIQUE_FOR_PRODUCTION_ONLY
DEBUG=True
APP_NAME=Document Retrieval System
ACCESS_TOKEN_EXPIRE_MINUTES=1440
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# AI Provider Configuration
# Options: "ollama" (local) or "openrouter" (cloud API)
AI_PROVIDER=openrouter

# OpenRouter API Configuration (if using AI_PROVIDER=openrouter)
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
# Available FREE models: nvidia/nemotron-3-nano-30b-a3b:free, stepfun/step-3.5-flash:free, arcee-ai/trinity-large-preview:free
OPENROUTER_MODEL=nvidia/nemotron-3-nano-30b-a3b:free

# Ollama Configuration (if using AI_PROVIDER=ollama)
# OLLAMA_HOST=http://localhost:11434